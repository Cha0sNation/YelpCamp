<%include ../partials/header%>
	<div class="container mt-2 py-2 new">
		<div class="container">
			<h1 class="text-center">Edit Comment</h1>
			<form action="/campgrounds/<%=campground_id%>/comments/<%=comment._id%>?_method=PUT" method="POST" class="form-group">
				<div class="form-group">
					<div class="row mt-1">
						<label for="comment[body]" class="pl-0 col-sm-3 col-form-label">Comment:</label>
						<input class="col-sm-9 form-control mt-1" type="text" name="comment[body]" value="<%=comment.body%>">
					</div>
				</div>
				<button class="btn btn-block btn-primary" type="submit">Submit</button>
			</form>
			<a class="btn btn-outline-primary" id="back" href="/campgrounds/<%=campground_id%>">Go Back</a>
		</div>
	</div>
<%include ../partials/footer%>