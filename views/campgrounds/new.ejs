<%include ../partials/header%>
	<div class="container mt-2 py-2 new">
		<div class="container">
			<h1 class="text-center">Add New Campgrounds</h1>
			<form action="/campgrounds" method="POST" class="form-group">
				<div class="form-group">
					<div class="row">
						<label for="campground[name]" class="pl-0 col-sm-3 col-form-label">Name:</label>
						<input class="col-sm-9 form-control" type="text" name="campground[name]" placeholder="Sandy Creek" required>
					</div>
					<div class="row mt-1">
						<label for="campground[image]" class="pl-0 col-sm-3 col-form-label">Image URL:</label>
						<input class="col-sm-9 form-control" type="url" name="campground[image]" placeholder="http://imgur.com/campground.jpg" required>
					</div>
					<div class="row mt-1">
						<label for="campground[image]" class="pl-0 col-sm-3 col-form-label">Pricing:</label>
						<input class="col-sm-9 form-control" type="number" name="campground[price]" placeholder="$9.00 (per night)" min="0.01" step="0.01" required>
					</div>
					<div class="row mt-1">
						<label for="campground[description]" class="pl-0 col-sm-3 col-form-label">Description:</label>
						<textarea class="col-sm-9 form-control" name="campground[description]" placeholder="Your opinions..." required></textarea>
					</div>
				</div>
				<button class="btn btn-block btn-primary" type="submit">Submit</button>
			</form>
			<a class="btn btn-outline-primary" id="back" href="/campgrounds">Go Back</a>
		</div>
	</div>
<%include ../partials/footer%>